{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Create authors for your content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string"
    },
    "bio": {
      "type": "text",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos"]
    },
    "isTeam": {
      "type": "boolean",
      "default": false
    },
    "team": {
      "type": "enumeration",
      "enum": ["founders", "team"]
    },
    "social": {
      "type": "component",
      "repeatable": false,
      "component": "shared.social"
    },
    "tick": {
      "type": "text"
    },
    "surprising": {
      "type": "text"
    },
    "weekends": {
      "type": "text"
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "author"
    }
  }
}
